<div class="promocion-agregar">
    <h1 class="titulo-promocion"> Nueva promoci√≥n</h1>
    <div class="mb-3">
        <form action="/admin/promociones/agregar" method="post" enctype="multipart/form-data">
        <div>
            <input type="text" class="form-control" placeholder="titulo" name="titulo">
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" placeholder="subtitulo" name="subtitulo">
            </div>
                <div class="mb-3">
                <label> Imagen : <input type="file" class="form-control" name="imagen" id="imagen" />
                </label>
            </div>
                <div class="mb-3">
                    <textarea type="text" placeholder="cuerpo" name="cuerpo"> </textarea>
                </div>
                <button type="submit" > guardar </button>
        </form>
        {{#if error}}
        <p> {{message }} </p>
        {{/if}}
    </div>
</div>